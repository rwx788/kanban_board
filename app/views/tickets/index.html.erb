<h1>Tickets#index</h1>
<p>Find me in app/views/tickets/index.html.erb</p>

<div id="tickets" class="list-group" data-url="<%= sort_tickets_path %>">
    <% Ticket.all.each do |ticket| %>
        <div id="<%= dom_id(ticket) %>" class="ticket">
            <a href="#" class="list-group-item list-group-item-action flex-column align-items-start active">
                <div class="d-flex w-100 justify-content-between">
                    <h5 class="mb-1"><%= ticket.title %></h5>
                    <small><%= ticket.tracker %></small>
                </div>
                <p class="mb-1"><%= ticket.external_id %></p>
                <p class="mb-1">Assignee:
                    <%= ticket.assignee %></p>
                <p class="mb-1">Priority:
                    <%= ticket.priority %></p>
            </a>
        </div>
    <% end %>
</div>

<%= javascript_pack_tag 'tickets', 'data-turbolinks-track': 'reload' %>
