<div id="<%= dom_id(status) %>" class="col-sm-2" data-status-id="<%= status.id %>">
    <h1 class="mb1">
        <%= status.name %>
        <span class="badge badge-dark"><%= (tickets_per_status = get_tickets_per_status(status)).count() %></span>
    </h1>
    <div class="tickets list-group" data-url="<%= update_list_tickets_path %>">
        <!-- Render tickets for current status -->
        <%= render :partial => tickets_per_status %>
    </div>
</div>
